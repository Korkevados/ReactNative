{
  "expo": {
    "name": "Favorite_Places",
    "slug": "Favorite_Places",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "extra": {
      "supportsRTL": true,
      "forceRTL": true
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      ["expo-localization"],
      [
        "expo-image-picker",
        {
          "cameraPermission": "נדרשת גישה למצלמה שלך על מנת לצלם תמונות"
        }
      ]
    ]
  }
}
